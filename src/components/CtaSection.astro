---
export interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
  imageSrc: string;
}

const { title, subtitle, ctaText, ctaLink, imageSrc } = Astro.props;
---

<section class="bg-background-light dark:bg-header-dark py-24">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-24">
    <div class="rounded-2xl bg-primary text-white p-12 md:p-16 shadow-xl grid md:grid-cols-2 gap-10 items-center">
      <div>
        <h2 class="text-4xl font-heading font-bold mb-6">{title}</h2>
        <p class="text-lg mb-6 opacity-90">{subtitle}</p>
        <a href={ctaLink} class="btn bg-white text-primary hover:bg-blue-100 transition">{ctaText}</a>
      </div>
      <img src={imageSrc} alt={title} class="rounded-xl shadow-lg w-full max-w-sm mx-auto md:mx-0" loading="lazy" />
    </div>
  </div>
</section>
