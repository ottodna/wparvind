---
export interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, description, ctaText = 'Let\'s Discuss Your Project', ctaLink = '/contact' } = Astro.props;
---

<section class="bg-background-light dark:bg-background-dark text-text py-24 px-6 md:px-12 lg:px-24 scroll-mt-20">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-heading font-bold text-primary mb-4">{title}</h2>
    <div class="h-1.5 w-16 bg-accent rounded-full mb-8"></div>
    <p class="text-lg text-text-secondary-light dark:text-text-secondary-dark leading-relaxed">{description}</p>
    <div class="mt-10">
      <a href={ctaLink} class="btn btn-primary hover:scale-105">{ctaText}</a>
    </div>
  </div>
</section>
