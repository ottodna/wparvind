---
import { Icon } from 'astro-icon/components';

export interface Service {
  title: string;
  slug: string;
  desc: string;
  icon: string;
}
export interface Props {
  title: string;
  subtitle: string;
  services: Service[];
}

const { title, subtitle, services } = Astro.props;
---

<section class="py-24 px-6 md:px-12 lg:px-24 bg-background-light dark:bg-background-dark text-text-primary-light dark:text-text-primary-dark transition-all">
  <div class="max-w-7xl mx-auto">
    <div class="text-left md:text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-primary mb-4">{title}</h2>
      <p class="text-lg text-text-secondary-light dark:text-text-secondary-dark max-w-2xl mx-auto font-sans">
        {subtitle}
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3">
      {services.map(service => (
        <a
          href={`/services/${service.slug}`}
          class="bg-white dark:bg-header-footer-dark rounded-xl shadow-md hover:shadow-lg border border-border-light dark:border-border-dark hover:border-primary transition-transform transform hover:scale-[1.02] p-6"
        >
          <div class="mb-4 text-primary">
            <Icon name={service.icon} class="w-10 h-10" />
          </div>
          <h3 class="text-xl font-semibold text-text-primary-light dark:text-text-primary-dark mb-2 font-display">
            {service.title}
          </h3>
          <p class="text-sm text-text-secondary-light dark:text-text-secondary-dark font-sans">
            {service.desc}
          </p>
          <div class="mt-4 text-sm font-medium text-primary hover:underline">Learn more â†’</div>
        </a>
      ))}
    </div>
  </div>
</section>
