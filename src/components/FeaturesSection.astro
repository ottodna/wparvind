---
export interface Feature {
  title: string;
  description: string;
}
export interface Props {
  title: string;
  features: Feature[];
}

const { title, features } = Astro.props;
---

<section class="py-24 px-6 md:px-12 lg:px-24 bg-background-light dark:bg-background-dark">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl font-heading font-bold text-primary text-center mb-16">{title}</h2>
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map(feature => (
        <div class="card text-left">
          <h3 class="text-xl font-bold mb-2 text-primary">{feature.title}</h3>
          <p class="text-text-secondary-light dark:text-text-secondary-dark">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
