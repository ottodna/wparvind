---
export interface Testimonial {
  quote: string;
  name: string;
}
export interface Props {
  title: string;
  testimonials: Testimonial[];
}

const { title, testimonials } = Astro.props;
---

<section class="py-24 px-6 md:px-12 lg:px-24 bg-background text-center text-text">
  <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-12">{title}</h2>
  <div class="max-w-3xl mx-auto space-y-12">
    {testimonials.map(item => (
      <div class="italic text-lg text-text-secondary-light dark:text-text-secondary-dark leading-relaxed">
        "{item.quote}"
        <br /><br />
        <span class="not-italic font-semibold text-text">â€“ {item.name}</span>
      </div>
    ))}
  </div>
</section>
