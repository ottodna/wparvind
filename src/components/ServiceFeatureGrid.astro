---
export interface Props {
  items: { title: string; desc: string }[];
}
const { items } = Astro.props;
---

<section class="grid gap-10 py-12 md:grid-cols-2">
  {items.map((item) => (
    <div class="p-6 bg-[var(--surface-light)] dark:bg-[var(--surface-dark)] rounded-xl shadow">
      <h3 class="text-xl font-semibold text-[var(--text-primary-light)] dark:text-[var(--text-primary-dark)]">
        {item.title}
      </h3>
      <p class="mt-2 text-[var(--text-secondary-light)] dark:text-[var(--text-secondary-dark)]">{item.desc}</p>
    </div>
  ))}
</section>
