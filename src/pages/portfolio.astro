---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';

const heroTitle = "Project Portfolio";
const heroSubtitle = "A selection of real-world WordPress and full-stack builds — fast, SEO-ready, and built for business impact.";

const projects = [
  {
    title: "ClaimTimeClock.com",
    description: "Law firm CMS + SEO system, 100% custom theme, 95+ mobile score.",
  },
  {
    title: "BhaktiSangrah App",
    description: "Mobile-first devotional content, blazing-fast WordPress API.",
  },
  {
    title: "RupeeWise News Portal",
    description: "Finance-focused CMS with Flutter front-end + Node backend.",
  },
];
---

<Layout title="Portfolio - WordPress Projects | Arvind" description="Portfolio of WordPress websites and mobile apps developed by Arvind Sharma, including SEO, API, and performance-focused projects.">
  <HeroSection 
    titleTop="Project"
    titleAccent="Portfolio"
    subtitleHtml="A selection of real-world WordPress and full-stack builds — <strong>fast, SEO-ready</strong>, and built for business impact."
    buttons={[
      { label: "Hire Me", href: "/contact", variant: "primary" },
      { label: "Explore Services", href: "/services", variant: "secondary" }
    ]}
  />

  <section class="py-24 px-6 md:px-12 lg:px-24 bg-background-light dark:bg-background-dark">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        {projects.map(project => (
          <div class="card text-left">
            <h3 class="text-xl font-semibold text-text mb-2">{project.title}</h3>
            <p class="text-sm text-text-secondary-light dark:text-text-secondary-dark">{project.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
