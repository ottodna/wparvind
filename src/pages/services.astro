---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import FeaturesSection from '../components/FeaturesSection.astro';

const heroTitle = "Explore My Services";
const heroSubtitle = "From custom WordPress sites to mobile apps and backend systems, I offer modern, scalable solutions tailored to your business.";

const services = [
  {
    title: "WordPress Development",
    slug: "wordpress",
    desc: "Custom themes, SEO, WooCommerce, and blazing-fast sites.",
    icon: "mdi:wordpress",
  },
  {
    title: "Laravel Development",
    slug: "laravel",
    desc: "REST APIs, dashboards, and backend systems with Laravel.",
    icon: "mdi:language-php",
  },
  {
    title: "Flutter Development",
    slug: "flutter",
    desc: "Cross-platform mobile apps for iOS and Android.",
    icon: "mdi:cellphone",
  },
];

const features = [
  { title: "Performance First", description: "Every project is optimized for speed and reliability." },
  { title: "End-to-End Ownership", description: "From planning to launch â€” I handle it all." },
  { title: "Built For Growth", description: "Codebases designed to evolve as your business grows." },
  { title: "Future-Proof Stack", description: "Using the latest frameworks and best practices." },
];
---

<Layout title="Services - Arvind" description="Explore WordPress, Laravel, and Flutter services by Arvind Sharma. Built for speed, SEO, and growth.">
  <HeroSection 
    titleTop="Explore My"
    titleAccent="Services"
    subtitleHtml="From custom WordPress sites to mobile apps and <strong>scalable backend systems</strong>, I deliver tailored business solutions."
    buttons={[
      { label: "Get In Touch", href: "/contact", variant: "primary" },
      { label: "See Portfolio", href: "/portfolio", variant: "secondary" }
    ]}
  />

  <ServicesSection
    title="What I Offer"
    subtitle="Build scalable websites, backend systems, and mobile apps tailored to your business goals."
    services={services}
  />

  <FeaturesSection title="Why Choose Me?" features={features} />
</Layout>
