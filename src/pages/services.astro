---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';

const services = [
  { title: "WordPress Development", slug: "wordpress", description: "Custom themes, SEO, speed & WooCommerce." },
  { title: "Laravel Development", slug: "laravel", description: "Backend systems, REST APIs & dashboards." },
  { title: "Flutter Development", slug: "flutter", description: "Cross-platform mobile apps for Android & iOS." },
];

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Services' }
];
---

<Layout title="Services - Arvind" description="Explore full-stack services including WordPress, Laravel, and Flutter.">
  <HeroSection breadcrumbs={breadcrumbs} />

  <section class="py-20 px-6 md:px-12 lg:px-24 bg-background text-text">
    <div class="max-w-7xl mx-auto text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-primary font-sans mb-4">Services I Offer</h1>
      <p class="text-lg text-secondary mb-12 max-w-2xl mx-auto">
        From websites to mobile apps, I provide performance-focused development services across popular tech stacks.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        {services.map(service => (
          <a href={`/services/${service.slug}`} class="block p-6 bg-white rounded-lg shadow hover:shadow-md transition border border-gray-100 hover:border-primary text-left">
            <h3 class="text-xl font-semibold text-text mb-2">{service.title}</h3>
            <p class="text-sm text-gray-500">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
