---
// src/pages/reviews.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Client Reviews - WordPress Developer Arvind">
  <section class="py-20 px-6 md:px-12 lg:px-24 text-center bg-white">
    <h1 class="text-4xl font-bold mb-6">Client Reviews</h1>
    <div class="max-w-2xl mx-auto space-y-8">
      <blockquote class="border-l-4 border-blue-500 pl-4 text-left">
        <p class="italic">“Arvind transformed our old site into a fast, modern experience. SEO rankings went up within weeks.”</p>
        <footer class="mt-2 text-sm text-gray-600">– Rohit M., Law Firm</footer>
      </blockquote>
      <blockquote class="border-l-4 border-blue-500 pl-4 text-left">
        <p class="italic">“Best developer I’ve worked with. Clean code, honest communication, and amazing speed results.”</p>
        <footer class="mt-2 text-sm text-gray-600">– Priya S., E-commerce Brand</footer>
      </blockquote>
    </div>
  </section>
</Layout>
