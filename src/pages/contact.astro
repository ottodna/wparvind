---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import ContactForm from '../components/ContactForm.astro';

const pageTitle = "Contact Me";
const contactEmail = 'arvind@wparvind.com';
const whatsappNumber = '919467938344';
const whatsappLink = `https://wa.me/${whatsappNumber}`;
---

<Layout title={pageTitle} description="Get in touch with Arvind Sharma for WordPress development, full-stack projects, or consultations.">
  <div class="bg-background-light dark:bg-background-dark py-24 px-6 md:px-12 lg:px-24">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-heading font-bold text-primary mb-4">Get In Touch</h1>
        <p class="text-lg text-text-secondary-light dark:text-text-secondary-dark max-w-2xl mx-auto">
          Ready to start your next WordPress project or have a question? Fill out the form or connect via WhatsApp.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
        <!-- Form: wider span -->
        <div class="lg:col-span-3">
          <ContactForm title="Send Me a Message" />
        </div>

        <!-- Sidebar: WhatsApp + Info -->
        <div class="lg:col-span-2 space-y-8">
          <div class="card border border-green-200 dark:border-green-600 bg-green-50 dark:bg-green-900 text-center">
            <h3 class="text-xl font-heading font-semibold text-green-800 dark:text-green-100 mb-4">Chat on WhatsApp</h3>
            <div class="flex justify-center mb-4 text-green-600 dark:text-green-200">
              <Icon name="logos:whatsapp-icon" class="w-14 h-14" />
            </div>
            <p class="text-sm text-green-700 dark:text-green-200 mb-5 leading-relaxed">
              Prefer a quick chat? Click below to send me a message directly.
            </p>
            <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn btn-primary w-full inline-flex items-center justify-center gap-2">
              <Icon name="fa-brands:whatsapp" class="w-5 h-5" />
              Chat on WhatsApp
            </a>
          </div>

          <div class="card border border-border-light dark:border-border-dark">
            <h3 class="text-xl font-heading font-semibold mb-5">Other Contact Details</h3>
            <div class="space-y-4 text-base text-text-secondary-light dark:text-text-secondary-dark">
              <div class="flex items-start">
                <Icon name="mdi:email-outline" class="w-6 h-6 mr-3 text-primary mt-0.5" />
                <div>
                  <span class="font-medium block">Email</span>
                  <a href={`mailto:${contactEmail}`} class="hover:text-primary break-all">{contactEmail}</a>
                </div>
              </div>
              <div class="flex items-start">
                <Icon name="mdi:map-marker-outline" class="w-6 h-6 mr-3 text-primary mt-0.5" />
                <div>
                  <span class="font-medium block">Location</span>
                  <span>Panchkula, Haryana, India<br /><span class="text-sm">(Remote services worldwide)</span></span>
                </div>
              </div>
              <div class="flex items-start">
                <Icon name="mdi:clock-outline" class="w-6 h-6 mr-3 text-primary mt-0.5" />
                <div>
                  <span class="font-medium block">Availability</span>
                  <span>Mon – Fri, 10:00 AM – 6:00 PM IST</span>
                </div>
              </div>
            </div>
          </div>
        </div> <!-- end sidebar -->
      </div> <!-- end grid -->
    </div>
  </div>
</Layout>
