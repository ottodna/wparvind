---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components'; // Or use inline SVGs

const pageTitle = "Contact Us";
// Breadcrumbs for potential use in Layout or a dedicated Breadcrumb component
const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: pageTitle }
];

// --- CONFIGURATION ---
const whatsappNumber = '919467938344'; // Use numbers only, including country code
const whatsappLink = `https://wa.me/${whatsappNumber}`;
const contactEmail = 'arvind@wparvind.com';
// --- END CONFIGURATION ---
---
<Layout title={pageTitle} currentPath="/contact"> {/* Pass props to layout if needed */}

  <div class="bg-background-light py-16 sm:py-24"> {/* Use theme background color */}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      {/* --- Page Header --- */}
      <div class="text-center mb-12 md:mb-16">
        {/* You could potentially include a Breadcrumb component here if not handled globally */}
        <h1 class="text-4xl sm:text-5xl font-heading font-extrabold tracking-tight text-text-main mb-4">
          Get In Touch
        </h1>
        <p class="max-w-2xl mx-auto text-lg text-text-muted leading-relaxed">
          Ready to start your next WordPress project or have a question? Use the form below or connect via WhatsApp. I'm based in Panchkula, India (IST, GMT+5:30) and typically respond within one business day.
        </p>
      </div>

      {/* --- Main Content Area (Form & Contact Info Grid) --- */}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-16">

        {/* --- Column 1 & 2: Contact Form --- */}
        <div class="lg:col-span-2 bg-white p-8 rounded-xl shadow-lg border border-gray-200/80">
          <h2 class="text-2xl font-heading font-semibold text-text-main mb-6">
            Send Me a Message
          </h2>

          {/* --- FORM HANDLING NOTE ---
          This HTML form needs integration with a backend or service like Netlify Forms,
          Formspree, Basin, Getform, etc., to actually send emails.
          Update the 'action' attribute and potentially add hidden fields
          based on your chosen service's requirements.
          --- END NOTE --- */}

          {/* <-- REPLACE with your form endpoint or Netlify attributes */}
          <form
            action="#"
            method="POST"
            class="space-y-6"
          >
            {/* Name Field */}
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name <span class="text-red-500">*</span></label>
              <input
                type="text"
                name="name"
                id="name"
                required
                autocomplete="name"
                placeholder="Your Name"
                class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition duration-150 ease-in-out"
              />
            </div>

            {/* Email Field */}
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address <span class="text-red-500">*</span></label>
              <input
                type="email"
                name="email"
                id="email"
                required
                autocomplete="email"
                placeholder="you@example.com"
                class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition duration-150 ease-in-out"
              />
            </div>

            {/* Subject Field (Optional) */}
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
              <input
                type="text"
                name="subject"
                id="subject"
                placeholder="Project Inquiry / Question"
                class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition duration-150 ease-in-out"
              />
            </div>

            {/* Message Field */}
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Your Message <span class="text-red-500">*</span></label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                placeholder="Tell me about your project or question..."
                class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition duration-150 ease-in-out resize-y"
              ></textarea>
            </div>

            {/* Submit Button */}
            {/* Submit Button */}
            <div>
              <button
                type="submit"
                class="w-full sm:w-auto inline-flex justify-center items-center px-8 py-3 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition duration-150 ease-in-out transform hover:scale-105"
              >
                Send Message
              </button>
            </div>
          </form>
        </div>

        {/* --- Column 3: WhatsApp & Other Info --- */}
        <div class="lg:col-span-1 space-y-8">

          {/* WhatsApp Section */}
          <div class="bg-green-50 p-6 rounded-xl shadow-lg border border-green-200 text-center">
            <h3 class="text-xl font-heading font-semibold text-green-800 mb-4">Chat on WhatsApp</h3>
             <div class="flex justify-center mb-4 text-green-600">
                {/* Replace with your preferred WhatsApp icon SVG if not using astro-icon */}
                <Icon name="logos:whatsapp-icon" class="w-16 h-16" />
             </div>
            <p class="text-green-700 text-sm mb-5 leading-relaxed">
              Prefer a quick chat for urgent queries or project discussion? Send me a message directly!
            </p>
            {/* --- This is the WhatsApp Button Link Block --- */}
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-full px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out transform hover:scale-105"
            >
              {/* Ensure Icon component call has correct quotes */}
              <Icon name="fa-brands:whatsapp" class="w-5 h-5 mr-2" />
              {/* Ensure text has no stray quotes */}
              Chat Now on WhatsApp
            </a>
            {/* --- End of the WhatsApp Button Link Block --- */}

          </div>

          {/* Other Contact Info */}
          <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200/80">
             <h3 class="text-xl font-heading font-semibold text-text-main mb-5">Other Contact Details</h3>
             <div class="space-y-4 text-base text-text-muted">
               {/* Email */}
               <div class="flex items-start">
                 <Icon name="mdi:email-outline" class="w-6 h-6 mr-3 text-primary flex-shrink-0 mt-0.5" />
                 <div>
                   <span class="font-medium text-gray-800 block">Email</span>
                   <a href={`mailto:${contactEmail}`} class="hover:text-primary break-all">{contactEmail}</a>
                 </div>
               </div>
               {/* Location */}
               <div class="flex items-start">
                 <Icon name="mdi:map-marker-outline" class="w-6 h-6 mr-3 text-primary flex-shrink-0 mt-0.5" />
                  <div>
                   <span class="font-medium text-gray-800 block">Location</span>
                   <span>Panchkula, Haryana, India<br/><span class="text-sm">(Remote services worldwide)</span></span>
                 </div>
               </div>
                {/* Working Hours (Optional) */}
               <div class="flex items-start">
                 <Icon name="mdi:clock-outline" class="w-6 h-6 mr-3 text-primary flex-shrink-0 mt-0.5" />
                  <div>
                   <span class="font-medium text-gray-800 block">Availability</span>
                   <span>Mon - Fri, 10:00 AM - 6:00 PM IST</span>
                 </div>
               </div>
             </div>
          </div>

        </div> {/* End Column 3 */}
      </div> {/* End Grid */}
    </div> {/* End Container */}
  </div> {/* End Section */}
</Layout>